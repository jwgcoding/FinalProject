@{
    ViewData["Title"] = "Home Page";
}

<body>
    
    <style>
        .carousel-item {
            height: 30rem;
          width:30rem;
          background-color:black;
            color: white;
            position: top;
        }

        .container {
            position: center;
            bottom: 0;
            left: 0;
            right: 0;
            padding-bottom: 0px;
        }
        body{
            background-color:black;
        }
        h2{
            font-family:'Old English Text MT';
            color:white;
            font-size:24px;
        }
        p{
            color:white;
            font-size: 18px;
        }
    </style>
    <script language="JavaScript" type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 2000
            })
        });
    </script>
    <script language="JavaScript" type="text/javascript" src="scripts/jquery.js"></script>
    <script language="JavaScript" type="text/javascript" src="scripts/bootstrap.min.js"></script>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
       
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block " src="/lib/Images/Moku/bottles.jpg"  alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/lib/Images/Moku/bottles2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/lib/Images/Moku/bottles3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block" src="/lib/Images/Moku/fronthouse.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/lib/Images/Moku/frontinterior.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/lib/Images/Moku/frontinterior2.jpg" alt="Sixth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block " src="/lib/Images/Moku/frontinterior3.jpg" alt="Seventh slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
