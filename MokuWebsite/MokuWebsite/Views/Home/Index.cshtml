@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> @ViewData["Title"] - Mokutanya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="js/jquery-1.7.1.min.js"></script>
  
</head>
 
<body>
    
    <style>
        .carousel-item {
            height: 30rem;
          width:30rem;
          background-color:black;
            color: white;
            position: top;
        }

        .container {
            position: center;
            bottom: 0;
            left: 0;
            right: 0;
            padding-bottom: 0px;
        }
        body{
            background-color:black;
        }
        h2{
            font-family:'Old English Text MT';
            color:white;
            font-size:24px;
        }
        p{
            color:white;
            font-size: 18px;
        }
    </style>
 
   
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2000">
       
    <ol class="carousel-indicators">
           
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-400" src="/lib/Images/Moku/bottles.jpg"  alt="First slide">
        </div>
        <div class="carousel-item active">
                <img class="d-block w-400" src="/lib/Images/Moku/bottles2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item ">
                <img class="d-block w-400" src="/lib/Images/Moku/bottles3.jpg" alt="Third slide">
        </div>
        <div class="carousel-item">
                <img class="d-block w-400" src="/lib/Images/Moku/fronthouse.jpg" alt="Fourth slide">
        </div>
        <div class="carousel-item">
                <img class="d-block w-400" src="/lib/Images/Moku/frontinterior.jpg" alt="Fifth slide">
        </div>
        <div class="carousel-item">
                <img class="d-block w-400" src="/lib/Images/Moku/frontinterior2.jpg" alt="Sixth slide">
        </div>
        <div class="carousel-item">
                <img class="d-block w-400" src="/lib/Images/Moku/frontinterior3.jpg" alt="Seventh slide">
        </div>
    </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" align role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
    
<section id="map"> <! -- Map -->
 <h2 class="border border-danger ">About Us</h>
 <p>We are a Japanese Yakitori restaraunt running for over 10 years. We have a variety of skewers, tapas, ramens and sakes.</p>
 <p>Come visit us today!</p>
<iframe width="400" height="400" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJP8ZRyCV2j4ARfqQbhMi2gHE&key=AIzaSyCJoOhPj1XUq7wGCE30M6x1q5XUYh_Of08"></iframe>
</section>
</body>