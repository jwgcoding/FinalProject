<link rel="stylesheet" href="/css/homepage.css" asp-append-version="true" type="text/css" />

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Mokutanya</h1>
    <p>We are a japanese yakitori restaraunt located in Burlingame,CA. We have been open for more than 10 years, thats a tesitimant on our quality.</p>
      
</div>

<div id="carousel" class="carousel slide" data-ride="carousel">
    <script type="text/javascript">
        $(document).ready(function () {
            $('.carousel').carousel({
                interval: 3000
            });

            $('.carousel').carousel('cycle');
        });
    </script>
    <div class="carousel-inner">
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/Images/Moku/bottles.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/Images/Moku/bottles2.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/lib/Images/Moku/bottles3.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>