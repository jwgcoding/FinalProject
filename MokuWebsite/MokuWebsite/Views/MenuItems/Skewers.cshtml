@model IEnumerable<MenuItems>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


<body>
    <div style="display:block">
        <style>
            h2 {
                font-family: 'Old English Text MT';
                font-size: 60px;
                color: white;
            }

            table td {
                color: white;
                font-size: 20px;
            }

            table th {
                background-color: black;
                color: white;
                font-family: Georgia, 'Times New Roman', Times, serif;
                font-size: 26px;
            }

            table th, table td {
                padding: 4px;
                border: 0px solid #ccc;
                border-color: yellow;
                font: white;
            }

            body {
                background-color: black;
            }

            #dropdownMenu2 {
                text-align: right;
                width: auto;
                float: right;
                height: auto;
                font-size: 16px;
            }

            label {
                color: white;
                font-family: 'Old English Text MT';
                font-size: 24px;
            }

            a {
                font-size: 16px;
            }

            .btn {
                font-size: 16px;
            }
        </style>
    </div>

    <h2>Skewers</h2>
    <div style="display: block">
        <a href="/MenuItems/InsertMenuItem/" class="btn btn-warning m-1">Create a Menu Item</a>
    </div>
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Menu Filter
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
            <a class="dropdown-item" asp-controller="MenuItems" asp-action="Index" type="button">Full Menu</a>
            <a class="dropdown-item" asp-controller="MenuItems" asp-action="Skewers" type="button">Skewers</a>
            <a class="dropdown-item" asp-controller="MenuItems" asp-action="Tapas" type="button">Tapas</a>
            <a class="dropdown-item" asp-controller="MenuItems" asp-action="Ramens" type="button">Ramens</a>
        </div>
    </div>

    <div class="container">
        <div style="width:100%; margin:0 auto;">
            @*<table class="table" cellpadding="0" cellspacing="0" border="1" width="100%">*@
            <table id="demoGrid" class="table table-active table-hover dt-responsive nowrap " width="100%" cellspacing="0">
                <tr>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Seafood</th>
                    <th>Has Gluten</th>
                    <th>Picture</th>
                </tr>

                @foreach (var items in @Model)
                {
                    <tr>
                        <td>
                            <form asp-controller="MenuItems" asp-action="ViewMenuItem">
                                <button class="btn btn-outline-warning" id="submit" name="id" type="submit" value="@items.ID">@items.ItemName</button>
                            </form>
                        </td>

                        <td>$@items.Price</td>
                        <td>@items.IsSeafood</td>
                        <td>@items.HasGluten</td>
                        <td><img src=@items.Picture height="140" width="140" class="rounded-circle"></td>
                    </tr>
                }

            </table>

        </div>
    </div>
</body>