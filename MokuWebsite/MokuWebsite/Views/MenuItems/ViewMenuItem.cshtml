<header>  
    <h1>This is the item you are editing</h1>
    
</header>
<body>
    
    <table id="myTable" class="table table-striped table-bordered dt-responsive nowrap " width="100%" cellspacing="0">
    <tr>
        <th>CategoryID</th>
        <th>Item Name</th>
        <th>Price</th>
        <th>Picture</th>
        </tr>
        <tr>
        <th>@Model.CategoryID</th>
        <th>@Model.ItemName</th>
        <th>$@Model.Price</th>
        <th><img src=@Model.Picture height="150" width="150" class="rounded-circle"></th>
        </tr>
    </table>
       @* <td><button class=""</td>*@
        <div class="d-flex justify-content-lg-start align-items-center">

            <div>
            <a href="/MenuItems/Index" class="btn btn-primary m-1 btn-lg">Go Back</a>
            </div>

            <div>
            <a href="/MenuItems/UpdateMenu/@Model.ID" class="btn btn-warning m-1 btn-lg">Update</a>
            </div>

            <div>
                @using (Html.BeginForm("DeleteMenuItems", "MenuItems", "Post"))
                {
                    <input type="hidden" asp-for="ID" value="@Model.ID" />
                    <input class="btn btn-danger m-1 btn-lg"type="submit" onclick="return confirm('Are you sure?')" value="Delete" />
                }
            </div>

        </div>
       
</body>
